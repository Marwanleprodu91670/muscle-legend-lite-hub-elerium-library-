-- Load the Orion Library
local OrionLib = loadstring(game:HttpGet("https://raw.githubusercontent.com/shlexware/Orion/main/source"))()

-- Create the main window
local Window = OrionLib:MakeWindow({
    Name = "Player Stats",
    HidePremium = false,
    SaveConfig = true,
    ConfigFolder = "PlayerConfig"
})

-- Create a table to store the player durability values
local playerDurability = {}
local selectedPlayerName = nil

-- Function to get all player names in the server
local function getAllPlayers()
    local playerNames = {}
    for _, player in pairs(game.Players:GetPlayers()) do
        table.insert(playerNames, player.Name)
    end
    return playerNames
end

-- Add a tab
local Tab = Window:MakeTab({
    Name = "Stats",
    Icon = "rbxassetid://4483345998",
    PremiumOnly = false
})

-- Add the dropdown
local playerDropdown = Tab:AddDropdown({
    Name = "Select Player",
    Default = "",
    Options = getAllPlayers(),
    Callback = function(value)
        selectedPlayerName = value
        -- Update the durability section when a player is selected
        updateDurability(selectedPlayerName)
    end
})

-- Add a label to display durability
local durabilityLabel = Tab:AddLabel("Durability: N/A")

-- Function to update the durability of a selected player
local function updateDurability(playerName)
    local player = game.Players:FindFirstChild(playerName)
    if player and player:FindFirstChild("Durability") then
        local durabilityValue = player.Durability.Value
        -- Update the durability label with the player's durability value
        durabilityLabel:Set("Durability: " .. tostring(durabilityValue))
    else
        durabilityLabel:Set("Durability: N/A")
    end
end

-- Function to refresh the dropdown every second
local function refreshDropdown()
    while true do
        -- Update the dropdown options with all current players
        playerDropdown:SetOptions(getAllPlayers())
        wait(1)  -- Wait for 1 second before updating again
    end
end

-- Start the refresh loop in a separate thread
spawn(refreshDropdown)

-- Initialize Orion Library
OrionLib:Init()
